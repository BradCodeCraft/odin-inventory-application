<!doctype html>
<html>
  <head>
    <title>Computer Inventory Application</title>
    <link rel="stylesheet" href="/styles.css">
  </head>

  <body>
    <div class="new-item-page">
      <h1>New Iventory Form</h1>

      <%- include("../errors/errors.ejs") %>

      <form action="/categories/<%= categoryId %>/items/new" method="post" class="new-item-form">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" required />
        <label for="quantity">Quantity</label>
        <input type="number" name="quantity" id="quantity" required>
        <button type="submit">Submit</button>
      </form>

      <a href="/categories/<%= categoryId %>/items"><button type="button" tabindex="-1">Back</button></a>
    </div>
  </body>
</html>
