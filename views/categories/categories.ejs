<!doctype html>
<html>
  <head>
    <title>Computer Inventory Application</title>
    <link rel="stylesheet" href="/styles.css">
  </head>

  <body>
    <div class="categories-page">
      <h1>Categories</h1>
      <% if (locals.categories) { %>
        <div class="categories-container">
          <% categories.forEach((category) => { %>
            <div class="category-container">
              <a class="category-name" href="/categories/<%= category.id %>/items">
                <button type="button"><%= category.name %></button>
              </a>
              <a class="category-link" href="/categories/<%= category.id %>">
                <button type="button">Edit</button>
              </a>
              <form 
                action="/categories/<%= category.id %>/delete"
                method="post"
                onsubmit="return confirm('Are you sure you want to delete <%= category.name %> category?')"
              >
                <button type="submit">Delete</button>
              </form>
            </div>
          <% }) %>
        </div>
      <% } %>

      <a href="/categories/new"><button type="button" tabindex="-1">Add a new category</button></a>
    </div>
  </body>
</html>
